# Bash options:
set -eu


# ====== Indentation ========================================================
print-utf8 -n -s '<*' '=' '*>'
for indent in -20 +20 ; do
   echo "Indented ${indent}:"
   print-utf8 -i ${indent} "Test: "
   echo "*"
   print-utf8 -i ${indent} "Test Ã¤Ã¶Ã¼ÃŸ Ã†Ã˜Ã…: "
   echo "*"
   print-utf8 -i ${indent} "æ‰˜é©¬æ–¯åšå£«: "
   echo "*"
   print-utf8 -i ${indent} "ğŸ˜€ğŸ’»: "
   echo "*"
done


# ====== Centering ==========================================================
print-utf8 -n -s '<ğŸ˜€' '=' 'ğŸ˜€>'
echo "Centered:"
print-utf8 -n -c "Test"
print-utf8 -n -c "\x1b[38;2;241;71;29mTest\x1b[0m"
print-utf8 -n -c "Ã¤Ã¶Ã¼ÃŸ"
print-utf8 -n -c "æ‰˜é©¬æ–¯åšå£«"

print-utf8 -n -s '<ğŸ’»ğŸ˜€' '=' 'ğŸ˜€ğŸ’»>'


# ====== Length, size and width =============================================
echo "Length, size and width:"
print-utf8 -s '<\x1b[5mğŸ’»\x1b[25mğŸ˜€' '=' '\x1b[5mğŸ’»\x1b[25mğŸ˜€>'
print-utf8 -l '<\x1b[5mğŸ’»\x1b[25mğŸ˜€'
print-utf8 -b '<\x1b[5mğŸ’»\x1b[25mğŸ˜€'
print-utf8 -w '<\x1b[5mğŸ’»\x1b[25mğŸ˜€'
print-utf8 -a '<\x1b[5mğŸ’»\x1b[25mğŸ˜€'
print-utf8 -s '<\x1b[5mğŸ’»\x1b[25mğŸ˜€' '=' '\x1b[5mğŸ’»\x1b[25mğŸ˜€>'


# ====== More complex examples ==============================================

echo "Box with date:"
print-utf8 -n -s "\e[1;34mâ•”" "â•" "â•—\e[0m"
# Using fixed date here, to make the test output reproducible:
date +"29. 09. 1976 12:34:56" | figlet -w 128 | \
print-utf8 -n -C "\e[1;34mâ•‘ğŸ•‘\e[1;31m" "\e[1;34mğŸ•‘â•‘\e[0m"
print-utf8 -n -s "\e[1;34mâ•š" "â•" "â•\e[0m"

echo "Box with error:"
print-utf8 -n -s "\e[1;31;5mâ–ˆ" "â–€" "â–ˆ\e[0m"
echo "ERROR  1234" | figlet -w 128 | \
   print-utf8 -n -C "\e[1;31;5mâ–ˆ\e[25m" "\e[5mâ–ˆ\e[0m"
print-utf8 -n -s "\e[1;31;5mâ–ˆ" "â–„" "â–ˆ\e[0m"

echo "Guru Meditation:"
print-utf8 -n -s "\e[1;31;40;5mâ–ˆ" "â–€" "â–ˆ\e[0m"
echo -e "Software Failure.   Press left mouse button to continue.\nGuru Meditation #00000004.48454C50" | \
   print-utf8 -n -C "\e[1;31;40;5mâ–ˆ\e[25m" "\e[5mâ–ˆ\e[0m"
print-utf8 -n -s "\e[1;31;40;5mâ–ˆ" "â–„" "â–ˆ\e[0m"

echo "Box with indentation:"
print-utf8 -n -x 44 -s "\e[1;32mâ•’" "â•" "â••\e[0m"
for i in 1 2 3 4 5  ; do echo "Test $i" ; done | print-utf8 -n --multiline-indent -42 "\e[1;32mâ”‚\e[34m" "\e[1;32mâ”‚\e[0m"
for i in 6 7 8 9 10 ; do echo "Test $i" ; done | print-utf8 -n --multiline-indent +42 "\e[1;32mâ”‚\e[34m" "\e[1;32mâ”‚\e[0m"
print-utf8 -n -x 44 -s "\e[1;32mâ•˜" "â•" "â•›\e[0m"


echo "Test passed!"
