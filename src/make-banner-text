set -e

bannerText="$1"

bannerFile=$(mktemp)
for sysvbanner in /usr/bin/figlet /usr/local/bin/figlet /usr/bin/sysvbanner /usr/local/bin/sysvbanner /usr/bin/banner /usr/bin/echo ] ; do
   if [ -x "${sysvbanner}" ] ; then
      ${sysvbanner} "${bannerText}" >"${bannerFile}"
      break
   fi
done

maxLineLength=$(awk 'BEGIN { maxLineLength = 0; } { if(length($0) > maxLineLength) { maxLineLength = length($0); } } END { print maxLineLength; }' "${bannerFile}")

(
   IFS=""
   while read -r line ; do
      if [ "${line}" != "" ] ; then
         printf "center \"%-${maxLineLength}s\"\n" "${line}"
      fi
   done
) <"${bannerFile}"
rm -f "${bannerFile}"
